<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView
            android:src="@drawable/booking_background_top"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:adjustViewBounds="true"


            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="291dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0">
    </ImageView>
    <ImageView
            android:src="@drawable/idk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="130dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="353dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="55dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView2">
    </ImageView>

    <ImageView
            android:src="@drawable/booking_refrence"
            android:layout_width="330dp"
            android:layout_height="304dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.608"
            android:id="@+id/imageView4">
    </ImageView>
    <ImageView
            android:src="@drawable/booking_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="700dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView3">
    </ImageView>

    <ImageView
            android:src="@drawable/where_are_you_going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="600dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" android:layout_marginEnd="175dp"
            app:layout_constraintEnd_toEndOf="parent">
    </ImageView>

    <Button
            android:id="@+id/BookingButton"
            android:background="@drawable/booking_button"
            android:layout_width="318dp"
            android:layout_height="54dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="619dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="58dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="46dp"
            android:layout_marginEnd="47dp" app:layout_constraintEnd_toEndOf="parent">
    </Button>

    <TextView
            android:id="@+id/DepartureDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2020"
            android:textSize="18dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="436dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="268dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="49dp" android:layout_marginEnd="254dp"
            app:layout_constraintEnd_toEndOf="parent">
    </TextView>
    <TextView
            android:id="@+id/DepartureAirport"
            android:text="LHR"
            android:textSize="40dp"
            android:layout_width="89dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="304dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="371dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp" android:layout_marginEnd="254dp"
            app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <TextView
            android:id="@+id/ArrivalDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2020"
            android:textSize="18dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="436dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="268dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="249dp" android:layout_marginEnd="54dp"
            app:layout_constraintEnd_toEndOf="parent">
    </TextView>
    <TextView
            android:id="@+id/ArrivalAirport"
            android:text="BOM"
            android:textSize="40dp"
            android:layout_width="89dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="304dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="371dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="268dp" android:layout_marginEnd="54dp"
            app:layout_constraintEnd_toEndOf="parent">
    </TextView>
    <TextView
            android:hint="Mumbai"
            android:layout_width="76dp"
            android:layout_height="16dp"
            android:id="@+id/ArrivalCity"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="360dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="355dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="268dp" android:layout_marginEnd="67dp"
            app:layout_constraintEnd_toEndOf="parent">

    </TextView>
    <TextView
            android:hint="Mumbai"
            android:layout_width="76dp"
            android:layout_height="16dp"
            android:id="@+id/DepartureCity"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="360dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="355dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp" android:layout_marginEnd="267dp"
            app:layout_constraintEnd_toEndOf="parent">
    </TextView>
    <TextView
            android:id="@+id/Travellers"
            android:hint="Adults 10"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="530dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="182dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp" android:layout_marginEnd="283dp"
            app:layout_constraintEnd_toEndOf="parent">
    </TextView>
    <TextView
            android:id="@+id/Class"
            android:hint="Economy"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="530dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="182dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="268dp" android:layout_marginEnd="83dp"
            app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <AutoCompleteTextView
            android:id="@+id/actv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:popupBackground="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="177dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="509dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
    </AutoCompleteTextView>


</androidx.constraintlayout.widget.ConstraintLayout>






